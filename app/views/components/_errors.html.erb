<% if obj.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" data-controller="alert>
    <div role="alert" class="flex justify-center items-start font-medium py-1 px-2 bg-white text-red-100 bg-red-700 border border-red-700" data-alert-target="alert">
        <div slot="avatar">
            <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-octagon w-5 h-5 mx-2">
                <polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
        </div>
        <div class="font-normal max-w-full flex-initial">
            <h4 class="mb-3 text-lg font-bold">The following errors prevented the <%= obj.class.name.downcase %> from being saved</h4>
            <ul class="flex flex-col space-y-3">
            <% obj.errors.full_messages.each do |msg| %>
              <li>
                  <%= msg %>
              </li>
          <% end %>
          </ul>
        </div>
        <%
=begin%>
 <div class="flex flex-auto flex-row-reverse">
            <div data-dismiss="alert" aria-label="Close" data-action="click->alert#close">
                <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x cursor-pointer hover:text-red-400 rounded-full w-5 h-5 ml-2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </div>
        </div> 
<%
=end%>
    </div>
  </div>
<% end %>