<div class="flex items-center justify-center h-screen">
  <div class="flex w-full lg:w-1/2 justify-center items-center bg-white space-y-8">
    <div class="w-full px-8 md:px-32 lg:px-24">
      <%= form_with(model: @department, class: 'shadow mb-3 p-5 bg-info roundedbg-white rounded-md shadow-2xl p-5', data: { turbo: false }) do |f| %>
        <h1 class="text-gray-800 font-bold text-2xl mb-8">Create Department!</h1>
        <div class="flex items-center border-2 mb-8 py-2 px-3 rounded-2xl">

          <svg
            class="h-5 w-5 text-gray-400"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
              clip-rule="evenodd"
            ></path>
          </svg>
          <%= f.text_field :name, class: 'pl-2 w-full outline-none border-none', required: true, placeholder: 'Department Name' %>
        </div>

        <%= f.submit "Save", class: 'block w-full bg-indigo-600 mt-5 py-2 rounded-2xl hover:bg-indigo-700 hover:-translate-y-1 transition-all duration-500 text-white font-semibold mb-2 hover:cursor-pointer' %>
      <% end %>
    </div>
    
  </div>
</div>